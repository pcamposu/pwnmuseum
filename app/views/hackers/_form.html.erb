<%= form_with model: @hacker, local: true, class: "max-w-2xl mx-auto" do |f| %>
  <% if @hacker.errors.any? %>
    <div class="bg-red-900/95 border-2 border-red-600 text-white px-4 sm:px-6 py-3 sm:py-4 rounded-xl mb-4 sm:mb-6 shadow-xl flex items-start gap-3">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 sm:w-6 sm:h-6 flex-shrink-0 mt-0.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
      </svg>
      <div>
        <h2 class="font-bold font-mono text-sm sm:text-base md:text-lg mb-1 sm:mb-2"><%= pluralize(@hacker.errors.count, "error") %> prohibited this hacker from being saved:</h2>
        <ul class="list-disc list-inside mt-1 sm:mt-2 space-y-0.5 sm:space-y-1 text-xs sm:text-sm">
          <% @hacker.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="bg-gray-900/80 backdrop-blur-sm border-2 border-gray-700 rounded-xl sm:rounded-2xl p-4 sm:p-6 md:p-8 shadow-2xl">
    <div class="space-y-4 sm:space-y-6">
      <div>
        <%= f.label :handle, "Handle *", class: "block text-sm sm:text-base font-mono font-bold mb-2 text-white" %>
        <div class="relative">
          <span class="absolute left-3 sm:left-4 top-1/2 -translate-y-1/2 text-gray-500">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 sm:w-5 sm:h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
            </svg>
          </span>
          <%= f.text_field :handle,
              class: "w-full bg-gray-800 border-2 border-gray-600 rounded-lg pl-10 sm:pl-12 pr-3 sm:pr-4 py-2 sm:py-3 text-white placeholder-gray-500 focus:border-red-500 focus:ring-2 focus:ring-red-500/50 transition-all text-sm sm:text-base",
              placeholder: "e.g., geohot" %>
        </div>
        <p class="text-xs text-gray-400 font-mono mt-1">Unique identifier (required)</p>
      </div>

      <div>
        <%= f.label :team, class: "block text-sm sm:text-base font-mono font-bold mb-2 text-gray-300 flex items-center gap-2" do %>
          <span>Is this a team?</span>
        <% end %>
        <div class="flex items-center gap-3">
          <label class="flex items-center gap-2 cursor-pointer">
            <div class="relative">
              <%= f.radio_button :team, false, checked: @hacker.new_record? ? true : !@hacker.team, class: "sr-only peer" %>
              <div class="w-5 h-5 sm:w-6 sm:h-6 border-2 border-gray-600 rounded-full peer-checked:bg-red-500 peer-checked:border-red-500 transition-all flex items-center justify-center">
                <%= inline_svg_tag "check.svg", class: "w-3 h-3 sm:w-4 sm:h-4 text-white", skip_tests: true if File.exist?(Rails.root.join("app/assets/images/check.svg")) %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="3" stroke="currentColor" class="w-3 h-3 sm:w-4 sm:h-4 text-white hidden peer-checked:block">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                </svg>
              </div>
            </div>
            <span class="text-sm sm:text-base text-gray-300 font-mono">Individual</span>
          </label>

          <label class="flex items-center gap-2 cursor-pointer">
            <div class="relative">
              <%= f.radio_button :team, true, checked: @hacker.team, class: "sr-only peer" %>
              <div class="w-5 h-5 sm:w-6 sm:h-6 border-2 border-gray-600 rounded-full peer-checked:bg-red-500 peer-checked:border-red-500 transition-all flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="3" stroke="currentColor" class="w-3 h-3 sm:w-4 sm:h-4 text-white hidden peer-checked:block">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                </svg>
              </div>
            </div>
            <span class="text-sm sm:text-base text-gray-300 font-mono">Team</span>
          </label>
        </div>
        <p class="text-xs text-gray-400 font-mono mt-1">Teams are groups (e.g., Team Xecuter), individuals are single hackers</p>
      </div>

      <div class="pt-4 sm:pt-6 border-t-2 border-gray-700">
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4">
          <%= link_to "Cancel", hackers_path,
              class: "w-full sm:w-auto px-4 sm:px-6 py-2 sm:py-3 rounded-lg font-mono font-bold border-2 border-gray-600 text-gray-300 hover:bg-gray-800 hover:text-white transition-all text-center text-sm sm:text-base" %>
          <%= f.submit "Save Hacker", class: "w-full sm:flex-1 bg-red-600 hover:bg-red-500 active:bg-red-700 px-4 sm:px-6 py-2 sm:py-3 rounded-lg font-mono font-bold text-white border-2 border-red-400 transition-all hover:scale-105 shadow-lg shadow-red-900/50 text-sm sm:text-base" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
