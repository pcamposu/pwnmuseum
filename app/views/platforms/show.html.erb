<div class="min-h-screen bg-gradient-to-b from-gray-950 via-gray-900 to-gray-950 text-gray-100" data-controller="timeline">
  <header class="bg-gray-900/95 backdrop-blur-sm border-b-2 border-gray-700 sticky top-0 z-10 shadow-xl">
    <div class="container mx-auto px-4 sm:px-6 py-6 sm:py-8">
      <%= link_to platforms_path, class: "text-gray-400 hover:text-white font-mono mb-3 sm:mb-4 inline-flex items-center gap-2 transition-colors duration-200 text-sm sm:text-base" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 sm:w-5 sm:h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
        </svg>
        <span>Back to Hall of Fame</span>
      <% end %>

      <h1 class="text-3xl sm:text-4xl md:text-5xl font-mono font-bold text-red-500 mb-2 drop-shadow-lg">
        <%= @platform.name %>
      </h1>
      <p class="text-base sm:text-lg md:text-xl text-gray-300 font-mono flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 sm:w-5 sm:h-5 text-red-400 flex-shrink-0">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z" />
        </svg>
        <span><%= @exploits.count %> exploit<%= @exploits.count != 1 ? 's' : '' %> documented</span>
      </p>
    </div>
  </header>

  <!-- Timeline Container -->
  <main class="relative bg-gray-950/50" style="min-height: calc(100vh - 180px);">
    <!-- Controls -->
    <div class="absolute top-4 right-4 sm:top-6 sm:right-6 z-20 flex gap-2 sm:gap-3">
      <button data-action="click->timeline#zoomOut"
          class="bg-gray-800 hover:bg-gray-700 active:bg-gray-600 w-10 h-10 sm:w-12 sm:h-12 rounded-full font-mono text-xl sm:text-2xl text-white border-2 border-gray-600 hover:border-gray-500 transition-all duration-200 shadow-lg flex items-center justify-center flex-shrink-0">âˆ’</button>
      <button data-action="click->timeline#zoomIn"
          class="bg-gray-800 hover:bg-gray-700 active:bg-gray-600 w-10 h-10 sm:w-12 sm:h-12 rounded-full font-mono text-xl sm:text-2xl text-white border-2 border-gray-600 hover:border-gray-500 transition-all duration-200 shadow-lg flex items-center justify-center flex-shrink-0">+</button>
    </div>

    <!-- Horizontal Scroll Container -->
    <div id="timeline-scroll"
        class="overflow-x-auto overflow-y-visible px-4 sm:px-6 md:px-8 py-8 sm:py-12 md:py-16 snap-x snap-mandatory"
        data-timeline-target="scrollContainer"
        style="scrollbar-width: thin; scrollbar-color: rgb(71 85 105) rgb(17 24 39); -webkit-overflow-scrolling: touch;">

      <!-- Timeline Line -->
      <div class="relative min-w-max" style="min-height: 400px;">
        <!-- Horizontal Line with Gradient -->
        <div class="absolute top-1/2 left-0 right-0 h-1 sm:h-2 bg-gradient-to-r from-gray-800 via-gray-600 to-gray-800 -translate-y-1/2 rounded-full shadow-lg shadow-gray-700/50"></div>

        <!-- Events Container -->
        <div class="flex gap-8 sm:gap-12 md:gap-16 lg:gap-20 items-center py-12 sm:py-16 px-4 sm:px-6 md:px-8" id="events-container" style="min-height: 300px;">
          <% @exploits.each do |exploit| %>
            <%= render exploit %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Scroll Hint for Mobile -->
    <div class="text-center pb-4 sm:hidden">
      <p class="text-gray-500 font-mono text-xs flex items-center justify-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 animate-pulse">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 4.5l-6.75 6.75 6.75 6.75" />
        </svg>
        <span>Swipe to explore</span>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 animate-pulse">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l6.75 6.75-6.75 6.75" />
        </svg>
      </p>
    </div>
  </main>

  <!-- Floating Action Button (FAB) -->
  <%= link_to new_platform_exploit_path(platform_slug: @platform.slug),
      class: "fixed bottom-6 right-6 sm:bottom-10 sm:right-10 bg-red-600 hover:bg-red-500 active:bg-red-700 text-white w-14 h-14 sm:w-20 sm:h-20 rounded-full shadow-2xl shadow-red-900/60 flex items-center justify-center z-30 border-4 border-red-400 transition-all duration-200 hover:scale-110" do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-7 h-7 sm:w-10 sm:h-10">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
    </svg>
  <% end %>
</div>

<!-- Modal Container -->
<div id="modal-container"></div>

