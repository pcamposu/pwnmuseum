<div class="min-h-screen bg-gradient-to-br from-gray-950 via-gray-900 to-gray-950 text-gray-100">
  <header class="bg-gray-900/95 backdrop-blur-sm border-b-2 border-gray-700 shadow-xl">
    <div class="container mx-auto px-4 sm:px-6 py-6 sm:py-8">
      <div class="flex items-center gap-2 text-gray-400 hover:text-white font-mono mb-3 sm:mb-4 inline-flex">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 sm:w-5 sm:h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
        </svg>
        <%= link_to "Back to Hall of Fame", platforms_path, class: "hover:text-white transition-colors" %>
      </div>

      <h1 class="text-3xl sm:text-4xl md:text-5xl font-mono font-bold text-white mb-2 sm:mb-3">
        Hackers
      </h1>
      <p class="text-base sm:text-lg md:text-xl text-gray-300 font-mono">
        Credits behind the exploits
      </p>
    </div>
  </header>

  <main class="container mx-auto px-4 sm:px-6 py-8 sm:py-12 md:py-16">
    <div class="flex items-center justify-between mb-6 sm:mb-8 md:mb-10 gap-4">
      <h2 class="text-xl sm:text-2xl md:text-3xl font-mono font-bold text-white">
        <%= @hackers.count %> Hacker<%= @hackers.count != 1 ? 's' : '' %>
      </h2>
      <%= link_to new_hacker_path,
          class: "bg-red-600 hover:bg-red-500 text-white px-4 sm:px-6 py-2 sm:py-3 rounded-lg font-mono font-bold border-2 border-red-400 transition-all duration-200 hover:scale-105 text-sm sm:text-base flex-shrink-0 flex items-center gap-2" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 sm:w-5 sm:h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M18 7.5v3m0 0v3m0-3h3m-3 0h-3m-2.25-4.125a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zM3 19.235v-.11a6.375 6.375 0 016.375-6.375h4.287c.276 0 .547.03.81.087m9.528-5.691a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM3 19.235V18.75c0-.986.622-1.874 1.545-2.186a57.24 57.24 0 0133.056-7.287" />
        </svg>
        <span>Add Hacker</span>
      <% end %>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 sm:gap-6">
      <% @hackers.each do |hacker| %>
        <div class="bg-gray-900/80 backdrop-blur-sm border-2 border-gray-700 rounded-xl p-4 sm:p-6 hover:border-red-500 hover:shadow-2xl hover:shadow-red-900/40 transition-all duration-300">
          <div class="flex items-start justify-between mb-4">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-full bg-gradient-to-br from-gray-700 to-gray-800 flex items-center justify-center border-2 border-gray-600">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 sm:w-6 sm:h-6 text-gray-400">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg sm:text-xl font-mono font-bold text-white">
                  <%= hacker.handle %>
                </h3>
                <% if hacker.team %>
                  <span class="inline-flex items-center gap-1 text-xs text-gray-400 font-mono mt-1">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 003.741-.479 3 3 0 00-4.682-2.72m.94 3.198l.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0112 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 016 18.719m12 0a5.971 5.971 0 00-.941-3.197m0 0A5.995 5.995 0 0012 12.75a5.995 5.995 0 00-5.058 2.772m0 0a3 3 0 00-4.681 2.72 8.986 8.986 0 003.74.477" />
                    </svg>
                    <span>Team</span>
                  </span>
                <% end %>
              </div>
            </div>
          </div>

          <div class="flex items-center justify-between text-sm text-gray-400 font-mono mb-4">
            <span><%= hacker.exploits.count %> exploit<%= hacker.exploits.count != 1 ? 's' : '' %></span>
          </div>

          <div class="flex gap-2">
            <%= link_to edit_hacker_path(hacker),
                class: "flex-1 bg-gray-800 hover:bg-gray-700 text-white px-3 py-2 rounded-lg font-mono text-sm font-bold border border-gray-600 hover:border-gray-500 transition-all flex items-center justify-center gap-1" do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
              </svg>
              <span class="hidden sm:inline">Edit</span>
            <% end %>

            <%= button_to hacker_path(hacker), method: :delete,
                data: { turbo_confirm: "Are you sure you want to delete #{hacker.handle}?" },
                class: "flex-1 bg-red-900/50 hover:bg-red-800 text-red-400 px-3 py-2 rounded-lg font-mono text-sm font-bold border border-red-900/50 hover:border-red-800 transition-all flex items-center justify-center gap-1" do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
              </svg>
              <span class="hidden sm:inline">Delete</span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <% if @hackers.empty? %>
      <div class="text-center py-12 sm:py-16">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" class="w-16 h-16 sm:w-20 sm:h-20 text-gray-700 mx-auto mb-4">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
        </svg>
        <h3 class="text-xl sm:text-2xl font-mono font-bold text-gray-500 mb-2">No hackers yet</h3>
        <p class="text-gray-600 font-mono text-sm sm:text-base mb-4">Get started by adding the first hacker</p>
        <%= link_to new_hacker_path,
            class: "inline-flex items-center gap-2 bg-red-600 hover:bg-red-500 text-white px-6 py-3 rounded-lg font-mono font-bold border-2 border-red-400 transition-all duration-200 hover:scale-105" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
          </svg>
          <span>Add First Hacker</span>
        <% end %>
      </div>
    <% end %>
  </main>
</div>
