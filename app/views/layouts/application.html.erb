<!DOCTYPE html>
<html>
  <head>
    <title>PWNMuseum - Preserving the Art of Privilege Escalation</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="turbo-root" content="/">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <style>
      /* Auto-dismiss flash notifications */
      @keyframes fadeOut {
        from { opacity: 1; }
        to { opacity: 0; }
      }
      .flash-fade-out {
        animation: fadeOut 0.5s ease-out forwards;
      }
    </style>
  </head>

  <body class="bg-gray-950 text-gray-100">
    <%# Flash notifications %>
    <% if notice %>
      <div id="notice" class="fixed top-6 right-6 bg-green-900/95 backdrop-blur-sm border-2 border-green-600 text-white px-8 py-4 rounded-xl font-mono font-bold z-50 shadow-2xl shadow-green-900/50 flex items-center gap-3">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-7 h-7">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span><%= notice %></span>
      </div>
      <script>
        setTimeout(() => {
          const notice = document.getElementById('notice');
          if (notice) {
            notice.classList.add('flash-fade-out');
            setTimeout(() => notice.remove(), 500);
          }
        }, 3000);
      </script>
    <% end %>

    <% if alert %>
      <div id="alert" class="fixed top-6 right-6 bg-red-900/95 backdrop-blur-sm border-2 border-red-600 text-white px-8 py-4 rounded-xl font-mono font-bold z-50 shadow-2xl shadow-red-900/50 flex items-center gap-3">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-7 h-7">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
        </svg>
        <span><%= alert %></span>
      </div>
      <script>
        setTimeout(() => {
          const alert = document.getElementById('alert');
          if (alert) {
            alert.classList.add('flash-fade-out');
            setTimeout(() => alert.remove(), 500);
          }
        }, 5000);
      </script>
    <% end %>

    <%= yield %>
  </body>
</html>
