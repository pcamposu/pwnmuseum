# PWNMuseum Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ============================================================================
# Rails Master Key (Required for production)
# ============================================================================
# Run `cat config/master.key` to get this value
# RAILS_MASTER_KEY=your_master_key_here

# ============================================================================
# PostgreSQL Database Configuration (Development & Test)
# ============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ============================================================================
# Rails Configuration
# ============================================================================
RAILS_MAX_THREADS=5

# ============================================================================
# Production Database Configuration
# ============================================================================
# For production, set this environment variable on your server/container
# PWNMUSEUM_DATABASE_PASSWORD=your_secure_production_password
# ============================================================================

# ============================================================================
# Optional: Secret Key Base
# ============================================================================
# Run `bin/rails secret` to generate a secure key
# RAILS_SECRET_KEY_BASE=your_generated_secret_key
