<div class="min-h-screen bg-gray-950 text-gray-100 py-12">
  <div class="container mx-auto px-6">
    <%= link_to "â† Back to Hall of Fame", platforms_path,
        class: "text-gray-400 hover:text-white font-mono mb-4 inline-block" %>

    <h1 class="text-3xl font-mono font-bold text-white mb-8">New Platform</h1>

    <%= form_with model: @platform, local: true do |f| %>
      <% if @platform.errors.any? %>
        <div class="bg-red-900 text-white px-4 py-3 rounded mb-4">
          <h2 class="font-bold font-mono"><%= pluralize(@platform.errors.count, "error") %> prohibited this platform from being saved:</h2>
          <ul class="list-disc list-inside mt-2">
            <% @platform.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-4 max-w-2xl mx-auto">
        <div>
          <%= f.label :name, class: "block text-sm font-mono mb-1 text-gray-300" %>
          <%= f.text_field :name, class: "w-full bg-gray-800 border border-gray-700 rounded px-3 py-2 text-white" %>
        </div>

        <div>
          <%= f.label :slug, class: "block text-sm font-mono mb-1 text-gray-300" %>
          <%= f.text_field :slug, class: "w-full bg-gray-800 border border-gray-700 rounded px-3 py-2 text-white" %>
        </div>

        <div>
          <%= f.label :manufacturer, class: "block text-sm font-mono mb-1 text-gray-300" %>
          <%= f.text_field :manufacturer, class: "w-full bg-gray-800 border border-gray-700 rounded px-3 py-2 text-white" %>
        </div>

        <div>
          <%= f.label :release_date, class: "block text-sm font-mono mb-1 text-gray-300" %>
          <%= f.date_field :release_date, class: "w-full bg-gray-800 border border-gray-700 rounded px-3 py-2 text-white" %>
        </div>

        <div>
          <%= f.label :generation, class: "block text-sm font-mono mb-1 text-gray-300" %>
          <%= f.number_field :generation, class: "w-full bg-gray-800 border border-gray-700 rounded px-3 py-2 text-white" %>
        </div>

        <div>
          <%= f.submit class: "bg-red-600 hover:bg-red-700 px-6 py-2 rounded font-mono text-white cursor-pointer" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
